<Page x:Class="MyRecreationList.WPF.LoginControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyRecreationList.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginControl">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF8980F7" Offset="0.36"/>
                <GradientStop Color="#FFFED2E2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border BorderThickness="2" CornerRadius="5" HorizontalAlignment ="Center" Width="90" Height="30" VerticalAlignment="Center" Margin="0,110,0,0" >
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC68EFD" Offset="1"/>
                    <GradientStop Color="#FFFED2E2" Offset="0.084"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Button BorderThickness ="0,0,0,0" Click="LoginBtn_Click" x:Name="LoginBtn"  Foreground="#FF484380" FontSize="14" Command="{Binding BorderBrush, ElementName=LoginBtn, Mode=OneWay}" FontFamily="Bahnschrift SemiBold SemiCondensed">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC68EFD" Offset="1"/>
                        <GradientStop Color="#FFFED2E2" Offset="0.084"/>
                    </LinearGradientBrush>
                </Button.Background> Login
            </Button>
        </Border>
        <PasswordBox x:Name="StrPassword" HorizontalAlignment="Center" VerticalAlignment="Center" Width="172" Height="20"/>
        <TextBox VerticalAlignment="Center" Margin="0,-100,0,0" HorizontalAlignment ="Center" x:Name="StrLogin" TextWrapping="Wrap" Text="Login"  Width="171" Height="22" />
    </Grid>
</Page>